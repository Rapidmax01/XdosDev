{% comment %}
  PayAfrika Plan Picker - Shows available subscription plans as cards
{% endcomment %}

{{ 'payafrika-widget.css' | asset_url | stylesheet_tag }}

<div id="payafrika-plan-picker"
     class="payafrika-widget payafrika-plan-grid"
     data-shop="{{ shop.permanent_domain }}"
     data-product-id="{{ product.id }}">
  <p class="payafrika-loading">Loading subscription plans...</p>
</div>

<script src="{{ 'payafrika-widget.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Plan Picker",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Subscription Plans"
    }
  ]
}
{% endschema %}
